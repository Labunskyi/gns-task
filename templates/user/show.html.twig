{% extends 'base.html.twig' %}

{% block body_id 'user_show' %}

{% block body %}
<div class="container">
    <h1>{{ user.name }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'id'|trans }}</th>
                <th scope="col">{{ 'name'|trans }}</th>
                <th scope="col">{{ 'email'|trans }}</th>
				<th scope="col"> {{ 'password'|trans }}</th>
				<th scope="col"></th>
			</tr>
        </thead>
        <tbody>
            <tr>
                <td scope="col">{{ user.id }}</td>
                <td scope="col">{{ user.name }}</td>
                <td scope="col">{{ user.email }}</td>
				<td scope="col">{{ user.password }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-success">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
       
        </tbody>
    </table>
	
	<a href="{{ path('user_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'back_to_list'|trans }}
    </a>
	</div>
{% endblock %}

