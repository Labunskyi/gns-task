{% extends 'base.html.twig' %}

{% block body_id 'user_new' %}

{% block body %}
<div class="container">
    <h1>{{ 'New user'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
		<div class="row" style="margin-top: 20px;">
			<div class="col-sm-2">
				<button type="submit" class="btn btn-success">
					<i class="fa fa-save" aria-hidden="true"></i> {{ 'create'|trans }}
				</button>
			</div>
			<div>
				<a href="{{ path('user_index') }}" class="btn btn-link" >
					{{ 'back_to_list'|trans }}
				</a>
			</div>
		</div>
    {{ form_end(form) }}
	</div>
{% endblock %}

